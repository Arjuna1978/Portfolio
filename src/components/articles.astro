---
import { Image } from "astro:assets";
import Fail from "../../public/articles/Fail.png";
import Mind from "../../public/articles/Mind.png";
import Go from "../../public/articles/Go.png";
import Card from "./cards.astro";

interface Articles {
  title: string;
  imagePath: string;
  link: string;
  description: string;
}

const articles: Articles[] = [
  {
    title: "What are Products?",
    imagePath: "/src/assets/Prod_def.png",
    link: "https://www.linkedin.com/pulse/what-product-leader-do-you-know-arjuna-vijayanayagam-yy8ke",
    description: "The industry dosen't have a good definition for the concept of \"Product\", so I propose one here. "
  },

  {
    title: "RAGs a Primer",
    imagePath: "/src/assets/Rag.jpeg",
    link: "https://www.linkedin.com/pulse/retrieval-augmented-generation-rag-primer-arjuna-vijayanayagam-db96c",
    description:
      "Retrieval-Augmented Generation technology is everywhere, but what is it in plain english?",
  },

  {
    title: "AI articles for business leaders",
    imagePath: "/src/assets/AI_simple.jpeg",
    link: "https://www.linkedin.com/pulse/great-resources-business-leaders-who-want-just-dip-ai-vijayanayagam-laxoe",
    description: "If are a business leader who wants to know just a little bit more than hype and jargon, these are for you.",
  },

    {
    title: "Products vs Solutions",
    imagePath: "/src/assets/Pro_vs_Sn.jpeg",
    link: "https://www.linkedin.com/pulse/you-delivering-product-solution-knowing-can-costly-vijayanayagam-uno4c/",
    description:
      "What is the difference between products and solutions and what can happen if this concept gets confused",
  },
  {
    title: "Why do products fail?",
    imagePath: "/src/assets/Fail.png",
    link: "https://www.leadingtheproduct.com/blog/why-do-products-fail/",
    description:
      "Year: 2023, Software products fail more often than not. Why does this happen? ",
  },
   {
    title: "Cloud Platform Teams",
    imagePath: "/src/assets/Cloud_Platform_Teams.png",
    link: "https://www.linkedin.com/pulse/how-productise-devops-cloud-platform-teams-arjuna-vijayanayagam-e8fuc",
    description: "What are Cloud platform teams and how can they improve your enterprise?",
  },
  
];
---

<section
  id="articles"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Thought leadership</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Articles</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        articles.map((articles) => (
          <div class="group">
          <Card
              imagePath={articles.imagePath}
              altText={articles.title}
              title={articles.title}
              description={articles.description}
              link={articles.link}
              age={2}
            />
          </div>
        ))
      }
    </div>
    
  </div>
   </div>
    <a
      target="_self"
      href="./moreArticles/"
      aria-label="More Articles"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
    >
      <span class="md:text-lg text-md"> More articles</span>

